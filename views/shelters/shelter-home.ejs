<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shelter Home</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
      body {
        background-color: #f4f6f9;
      }
      .navbar {
        background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
      }
      .card {
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
      }
      .card-img-top {
        height: 250px;
        object-fit: cover;
      }
      .btn-edit {
        background-color: #f39c12;
        border-color: #d35400;
      }
      .btn-delete {
        background-color: #e74c3c;
        border-color: #c0392b;
      }
      .empty-state {
        background-color: #ecf0f1;
        border-radius: 10px;
        padding: 2rem;
        text-align: center;
      }
    </style>
    <script>
      function deleteConfirmation(button) {
        const petId = button.getAttribute("data-id");
        // console.log("Pet ID yang akan dihapus:", petId);

        Swal.fire({
          title: "Are you sure?",
          text: "Apakah Anda yakin ingin menghapus pet ini?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, delete it!",
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = `/shelter/${petId}/delete`;
          }
        });
      }
    </script>
  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>

    <div class="container mt-5">
      <h2 class="text-center mb-4 text-dark">Daftar Pet Anda</h2>

      <div class="row">
        <% if (pets.length === 0) { %>
        <div class="col-12">
          <div class="empty-state">
            <h3>Belum Ada Pet</h3>
            <p class="text-muted">Anda belum menambahkan pet apapun</p>
            <a href="/shelter/addPet" class="btn btn-primary mt-3"
              >Tambah Pet Baru</a
            >
          </div>
        </div>
        <% } else { %> <% pets.forEach(pet => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img
              src="<%= pet.image %>"
              class="card-img-top"
              alt="<%= pet.name %>"
              style="width: 100%; height: 200px; object-fit: cover"
            />
            <div class="card-body">
              <h5 class="card-title"><%= pet.name %></h5>
              <p class="card-text">
                <strong>Type:</strong> <%= pet.Type.name %><br />
                <strong>Breed:</strong> <%= pet.breed %><br />
                <strong>Price:</strong> <%= pet.priceInRp %> <% if (pet.adopted)
                { %> <br /><span class="text-success"
                  ><strong>Status:</strong> Adopted</span
                >
                <% }else { %>
                <br /><span class="text-primary"
                  ><strong>Status:</strong> Waiting for Adoption: <%=
                  timeWaiting(pet.createdAt) %>
                </span>
                <% } %>
              </p>
              <div class="d-flex justify-content-between mt-3">
                <a
                  href="/shelter/<%= pet.id %>/edit"
                  class="btn btn-outline-primary btn-sm"
                >
                  Edit
                </a>
                <!-- <a
                  href="/shelter/<%= pet.id %>/delete"
                  class="btn btn-outline-danger btn-sm"
                >
                  Hapus
                </a> -->
                <button
                  class="delete-btn btn btn-outline-danger btn-sm"
                  data-id="<%= pet.id %>"
                  onclick="deleteConfirmation(this)"
                >
                  delete
                </button>
              </div>
            </div>
          </div>
        </div>
        <% }); %> <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
